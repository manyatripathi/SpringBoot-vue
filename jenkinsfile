pipeline {
  agent any{
       steps {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
       }
    }

  stages {
  stage('Build') {
      steps {
        sh 'mvn -B -DskipTests clean package'
        }
    }
    
  stage('Stage 2') {
      steps {
        script {
          echo 'Stage 2'
        }
      }
    }
  }
}
